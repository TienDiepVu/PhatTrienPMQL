@model BTL.Models.NhanVien

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1 class="text-center">Thêm Nhân Sự</h1>

<div class="container d-flex justify-content-center">
    <form asp-action="Upload" enctype="multipart/form-data" style="width: 650px;">
        <div class="mt-3 form-control text-center">
            <label>Nhập từ file: </label>
            <input type="file" name="file" class="col-6">
            <input type="submit" value="Tải lên" class="btn btn-primary ">
        </div>
    </form>
</div>
<div class="row">
    <div class="d-flex justify-content-center">
        <form asp-action="Create" style="width: 650px;">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group mt-3">
                <label asp-for="MaNhanVien" class="control-label">Mã Nhân Viên</label>
                <input asp-for="MaNhanVien" class="form-control">
                <span class="text-danger" asp-validation-for="MaNhanVien"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="TenNhanVien" class="control-label">Họ và tên</label>
                <input asp-for="TenNhanVien" class="form-control">
                <span class="text-danger" asp-validation-for="TenNhanVien"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="ChucVu" class="control-label">Chức vụ</label>
                <input asp-for="ChucVu" class="form-control">
                <span class="text-danger" asp-validation-for="ChucVu"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="MucLuong" class="control-label">Mức Lương</label>
                <input asp-for="MucLuong" class="form-control">
                <span class="text-danger" asp-validation-for="MucLuong"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="SoDienThoai" class="control-label">Số điện thoại</label>
                <input asp-for="SoDienThoai" class="form-control">
                <span class="text-danger" asp-validation-for="SoDienThoai"></span>
            </div>
            <div class="form-group mt-3 d-flex justify-content-around">
                <input type="submit" class="btn btn-primary" value="Lưu thông tin" style="width: 200px">
                <a asp-action="Index" class="btn btn-secondary" style="width: 200px">Trở lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}